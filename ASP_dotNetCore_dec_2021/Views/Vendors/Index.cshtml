@model IEnumerable<Vendor>

<h2>Vendors</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Contact</th>
            <th scope="col">Phone</th>
            <th scope="col">State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.V_code</th>
                <td>
                    <span style="cursor: pointer"
                          onclick="showProducts('@item.V_code', '@item.V_name')"
                          data-toggle="modal" data-target="#exampleModal">
                        @item.V_name
                    </span>
                </td>
                <td>@item.V_contact</td>
                <td>@item.V_phone</td>
                <td>@item.V_state</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>

    function showProducts(id, vendorName) {


        const url = "@Url.Action("GetProductsByVendorId", "Products")/" + id;

        console.log("url = ", url);

        $.get(url, function (data) {
            console.log(data);
            $(".modal-body").html(data);
            $("#exampleModalLabel").html(vendorName + "'s products");
        });
    }

</script>