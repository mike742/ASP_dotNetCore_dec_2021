@model ASP_dotNetCore_dec_2021.ModelsDto.ProductDto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="P_code" class="control-label"></label>
                <input asp-for="P_code" class="form-control" />
                <span asp-validation-for="P_code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P_descript" class="control-label"></label>
                <input asp-for="P_descript" class="form-control" />
                <span asp-validation-for="P_descript" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P_InDate" class="control-label"></label>
                <input asp-for="P_InDate" class="form-control" />
                <span asp-validation-for="P_InDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P_Price" class="control-label"></label>
                <input asp-for="P_Price" class="form-control" />
                <span asp-validation-for="P_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P_Discount" class="control-label"></label>
                <input asp-for="P_Discount" class="form-control" />
                <span asp-validation-for="P_Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Vendors</label>
                @*<input asp-for="V_order" class="form-control" />
        <span asp-validation-for="V_order" class="text-danger"></span>*@
                <br />

                <!-- fix v_code null returning -->
                <select asp-items="ViewBag.Vendors" asp-for="V_code"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
